
public class Test {
    public static void main(String[] args) {
        int sum = 0;
        String reverse="";
        int n=121,d=0;
       do {
            d=n%10;
           sum=sum+d;
           reverse=reverse+d;
            n/=10;
        }while(n>0);

        System.out.println("reverse "+reverse +" sum "+sum);
    }



}

